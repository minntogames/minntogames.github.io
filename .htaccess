<Files ~ "^\.(htaccess|htpasswd)$">
deny from all
</Files>
Options -Indexes
ErrorDocument 404 /404.html   
order deny,allow

# URL書き換え設定
RewriteEngine On

# character/?id=X 形式のリクエストを character/index.php にリダイレクト
RewriteCond %{QUERY_STRING} ^id=([0-9]+)(&.*)?$
RewriteRule ^character/?$ character/index.php [QSA,L]

# character/数値 形式のリクエストを character/index.php?id=数値 にリダイレクト
RewriteRule ^character/([0-9]+)/?$ character/index.php?id=$1 [QSA,L]
